
@{
    ViewBag.Title = "QuenMatKhau";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/StyleDoAn.css">
<div class="row" style="padding-bottom:10px">
    <h3 style="text-align:center; font-weight:bold ;text-decoration:underline #ffd800; padding-bottom: 10px">Tìm Mật Khẩu</h3>
    <h4 style="color:red; text-align:center">@ViewBag.ThongBao</h4>
    <div class="col-lg-6" style="padding-left:20px">
        <table align="center" class="pull-right">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr style="height:40px">
                    <td style="text-align:right">Tên đăng nhập: </td>
                    <td>
                        @Html.TextBox("tenDN")
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td></td>
                    <td>
                        <input type="submit" value="Tìm mật khẩu" />
                    </td>
                    <td>
                        @Html.ActionLink("Back", "DangNhap", "", new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-lg-3 " style="display:flex">
        <img src="~/Content/Hinh_web/timMatKhau.jpg" alt="Thumbnail" class="pull-left" />
    </div>
</div>