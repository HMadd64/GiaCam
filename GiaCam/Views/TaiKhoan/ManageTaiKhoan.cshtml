
@{
    ViewBag.Title = "ManageTaiKhoan";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/StyleDoAn.css">
<h2 style="text-align: center; font-weight: bold; text-decoration: underline #ffd800">Thông Tin Tài Khoản</h2>
<h4 style="color:red; text-align:center">@ViewBag.ThongBao</h4>
<div class="row" style="padding: 20px 5px">
    <div class="col-lg-7" style="float:left; padding-left:450px">
        <table align="center">
            <tr style="text-align:right">
                <td style="font-weight:bold"> Mã khách hàng: </td>
                <td style="text-align:left; padding-left: 5px">@Model.MaKH</td>
            </tr>
            <tr style="text-align: right">
                <td style="font-weight:bold"> Tên khách hàng: </td>
                <td style="text-align: left; padding-left: 5px">@Model.TenKH</td>
            </tr>
            <tr style="text-align: right">
                <td style="font-weight:bold"> Tài khoản: </td>
                <td style="text-align: left; padding-left: 5px">@Model.TaiKhoan</td>
            </tr>
            <tr style="text-align: right">
                <td style="font-weight:bold"> Mật Khẩu: </td>
                <td style="text-align: left; padding-left: 5px">@Model.MatKhau ||@Html.ActionLink("Đổi Mật Khẩu", "DoiMatKhau", new { @class = "btn btn-default" })</td>

            </tr>
            <tr style="text-align: right">
                <td style="font-weight:bold"> Email: </td>
                <td style="text-align: left; padding-left: 5px">@Model.Email</td>
            </tr>
            <tr style="text-align: right">
                <td style="font-weight:bold"> Số điện thoại: </td>
                <td style="text-align: left; padding-left: 5px">@Model.SDT</td>
            </tr>
            <tr style="text-align: right">
                <td style="font-weight:bold"> Địa chỉ: </td>
                <td style="text-align: left; padding-left: 5px">@Model.DiaChi</td>
            </tr>
            <tr style="text-align: right">
                <td style="font-weight:bold"> Ngày sinh: </td>
                <td style="text-align: left; padding-left: 5px">@Model.NgaySinh.Day/@Model.NgaySinh.Month/@Model.NgaySinh.Year</td>
            </tr>
            <tr style="text-align: right">
                <td></td>
                <td>@Html.ActionLink("Đăng Xuất", "DangXuat", "", new { @class = "btn btn-info" })</td>
            </tr>
        </table>
    </div>
    <div class="col-lg-4 ">
        <img src="~/Content/Hinh_web/manage.jpg" alt="Thumbnail" class="pull-left" style="width: 200px" />
    </div>
</div>

